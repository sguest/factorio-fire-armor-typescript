  "devDependencies": {
    "@types/factorio": "../factorio-types/types-factorio-0.0.1.tgz",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "typescript-to-lua": "^0.26.0"
  }
}
