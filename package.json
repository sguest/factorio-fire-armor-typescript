{
  "name": "factorio-fire-armor-typescript",
  "version": "0.0.1",
  "description": "Fire armor factorio mod with typescript",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:scripts": "tstl -p tsconfig.json",
